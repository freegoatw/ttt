builds:
  - binary: godo
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0
    flags:
      - -mod=vendor

release:
  prerelease: auto

universal_binaries:
  - replace: true

brews:
  -
    name: godo
    homepage: "https://github.com/ritikdhasmana/godo"
    tap:
      owner: ritikdhasmana
      name: homebrew-ritikd
    commit_author:
      name: ritik
      email: ritikdhasmana22@gmail.com

checksum:
  name_template: 'checksums.txt'